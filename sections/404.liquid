{{ '404.out.css' | asset_url | stylesheet_tag }}


{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="page-error section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="page-error__content text-center">
        <div class="page-error__top">
            {% if section.settings.image != blank %}
                <div class="page-error__image">
                {{ section.settings.image | image_url: width: 120 | image_tag:
                    width: section.settings.image.width,
                    height: section.settings.image.height,
                    class: 'page-error__image-img',
                    loading: 'lazy',
                    sizes: '100vw',
                    widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840' 
                }}
                </div>
            {% endif %}
            <div class="page-error__title">
                {% if section.settings.title != blank %}
                    {{ section.settings.title }}
                {% endif %}
            </div>
        </div>
        <div class="page-error__buttons">
            {% if section.settings.button_label != blank %}
            <div class="img-and-content__button">
              <a class="btn btn__primary" href="{{ section.settings.button_url }}">{{ section.settings.button_label }}</a>
            </div>
          {% endif %}
          {% if section.settings.button_label_second != blank %}
            <div class="img-and-content__button">
              <a class="btn btn__primary" href="{{ section.settings.button_url_second }}">{{ section.settings.button_label_second }}</a>
            </div>
          {% endif %}
        </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Page 404",
  "class": "shopify-section--error",
  "settings": [
    {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "text",
      "id": "button_label_second",
      "label": "Button Label Second"
    },
    {
      "type": "url",
      "id": "button_url_second",
      "label": "Button URL Second"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Desktop padding top",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Desktop padding bottom",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "label": "Mobile padding top",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "label": "Mobile padding bottom",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Page 404",
      "category": "Content"
    }
  ]
}

{% endschema %}