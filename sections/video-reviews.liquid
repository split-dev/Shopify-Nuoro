{{ 'video-reviews.out.css' | asset_url | stylesheet_tag }}


{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  #video-reviews-{{ section.id }} {
    background-color: {{ section.settings.bg_color }} !important;
  }
{%- endstyle -%}

<section id="video-reviews-{{ section.id }}" class="video-reviews section-{{ section.id }}-padding">
  <div class="video-reviews__wrapper">
    <div class="js-video-reviews-slider-init-{{ section.index }}">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <a href="{{ block.settings.video.sources[0].url }}" class="js-glightbox-reviews swiper-slide d-flex flex-column align-items-center" data-glightbox="product-video">
            <div class="video-reviews__preview">
              {{ block.settings.video | video_tag: image_size: '700x', id:'js-home-hero-video', loop: true, mute: true, autoplay: true }}
            </div>
            <h4>{{ block.settings.title }}</h4>
            <p>{{ block.settings.text }}</p>
          </a>

        {% endfor %}
      </div>
    </div>
  </div>
</section>

<script type="text/javascript">
  const lightboxReviews = GLightbox({
    selector: '.js-glightbox-reviews',
    touchNavigation: true,
    loop: true,
    autoplayVideos: true
  });
</script>

<script>
  var videoRewiesSlider = new Swiper('.js-video-reviews-slider-init-{{ section.index }}', {
    slidesPerView: 'auto',
    freeMode: false,
    centeredSlides: true,
    loop: true,
    spaceBetween: 33,
    autoplay: true,
    breakpoints: {
        575: {
            slidesPerView: 'auto',
            spaceBetween: 33,

        },
        750: {
            slidesPerView: 'auto',
            spaceBetween: 40,
        },
        990: {
            slidesPerView: 'auto',
            spaceBetween: 60,
        }
    },
});
</script>

{% schema %}
{
  "name": "Video Reviews",
  "class": "shopify-section--video-reviews",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "transparent"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Desktop padding top",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Desktop padding bottom",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "label": "Mobile padding top",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "label": "Mobile padding bottom",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 0
    }
  ],
  "blocks": [
    {
      "name": "Review Item",
      "type": "text",
      "settings": [
        {
          "type": "video",
          "id": "video",
          "label": "Video"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Video Reviews",
      "category": "Content"
    }
  ]
}

{% endschema %}