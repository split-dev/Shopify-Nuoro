{{ 'nuoro-testimonial.out.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
        margin-top: {{ section.settings.margin_top }}px;
        margin-bottom: {{ section.settings.margin_bottom }}px;
  }
{%- endstyle -%}

<div class="nuoro-testimonial__wrapper section-{{ section.id }}-padding">
  <article>
    <div class="content__wrapp">
      <div class="nuoro-testimonial__content">
        {{ section.settings.content }}
      </div>
      <p class="nuoro-testimonial__author">
        <span>{{ section.settings.title }}</span>
        <span>{{ section.settings.sub_title }}</span>
      </p>
    </div>
    <div class="image__wrapp">
      {%- if section.settings.image != blank -%}
        {{ section.settings.image | image_url: width: 550 | image_tag: class: '__image', loading: 'lazy' }}
      {%- endif -%}
    </div>
  </article>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {});
</script>

{% schema %}
{
  "name": "Nuoro testimonial",
  "tag": "section",
  "class": "nuoro-testimonial",
  "settings": [
    {
      "type": "header",
      "content": "Main data section"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content section"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title section"
    },
    {
      "type": "text",
      "id": "sub_title",
      "label": "Sub title section"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom",
      "default": 0
    },
    {
      "type": "header",
      "content": "Margin"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Testimonial"
    }
  ]
}
{% endschema %}
