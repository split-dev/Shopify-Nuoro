{{ 'benefits.out.css' | asset_url | stylesheet_tag }}


{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="benefits section-{{ section.id }}-padding">
  <div class="page-width">
    {% if section.settings.title %}
        <h2 class="text-center benefits__title">{{ section.settings.title }}</h2>
    {% endif %}
    <div class="benefits__wrapper d-flex">
        <!-- Tab links -->
        {% for block in section.blocks %}
          {% if block.settings.title %}
            <div class="benefits__wrapper-item item d-flex align-items-center">
              <h4 class="h2">{{ block.settings.title }}</h4>
              <p class="text-center text-26px item-title">{{ block.settings.heading }}</p>
              <p class="text-center text-15px description">{{ block.settings.text }}</p>
            </div>
          {% endif %}
        {% endfor %}
      </div>
  </div>
</section>

{% schema %}
{
  "name": "Benefits Health",
  "class": "shopify-section--benefits",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Desktop padding top",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Desktop padding bottom",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "label": "Mobile padding top",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "label": "Mobile padding bottom",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 0
    }
  ],
  "blocks": [
    {
      "name": "List Item",
      "type": "text",
      "limit": 10,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Benefits Health",
      "category": "Content"
    }
  ]
}

{% endschema %}